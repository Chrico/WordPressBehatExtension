<phpunit
	bootstrap="unit-tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite>
			<directory suffix="Test.php">./unit-tests/</directory>
		</testsuite>
	</testsuites>
</phpunit>
