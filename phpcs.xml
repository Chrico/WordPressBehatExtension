<?xml version="1.0"?>
<ruleset name="WordPressBehatStandard">
    
    <file>src</file>
    <rule ref="PSR2"/>
    
    <!--
    Property and method names with underscore prefix are allowed.
    Not using underscore prefix is a recommendation of PSR2 not a requirement.
    -->
    <rule ref="PSR2.Classes.PropertyDeclaration.Underscore">
        <severity>0</severity>
    </rule>
    <rule ref="PSR2.Methods.MethodDeclaration.Underscore">
        <severity>0</severity>
    </rule>
    
</ruleset>